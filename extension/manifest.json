{
  "manifest_version": 3,
  "name": "Velocity",
  "version": "1.1",
  "description": "Improve your prompt design with Velocity",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "action": {
    "default_popup": "login.html"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48-1.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["src/output.css"]
    }
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "http://127.0.0.1:*/*",
    "https://www.toteminteractive.in/*"
  ]
}